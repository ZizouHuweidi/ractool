generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

enum GENDER {
  MALE
  FEMALE
}

enum ROLE {
  REGULAR
  SPECIAL
}

enum MEMBERSHIP_STATUS {
  ACTIVE
  INACTIVE
}

model Admin {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password  String
  firstName  String
  middleName  String?
  lastName  String
}

model Member {
  id    Int     @id @default(autoincrement())
  email String  @unique
  password  String
  firstName  String
  middleName  String?
  lastName  String
  gender    GENDER
  phoneNumber  Int
  profile Profile?
  role  ROLE? @default(REGULAR)
  membershipStatus MEMBERSHIP_STATUS?
}



